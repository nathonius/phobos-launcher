{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "declaration": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022", "dom"],
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "files": ["server/main.ts", "server/preload.ts"],
  "include": ["server/**/*.d.ts"]
}
